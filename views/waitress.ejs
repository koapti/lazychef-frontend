<!-- templates for making order -->
<template id="make-order-container">
  <div class="make-order"> <!-- one div -->

      <div class="details"> <!-- one div -->
        <form>
          <input name="table-number" type="number" placeholder="nr" id="tab-num">
        </form>
      </div>

      <div class="summary"> <!-- one div -->
        <div>
          <h1>
            <i class="fas fa-coins"></i>
            <!-- costSummary -->
          </h1>
        </div>
        <button id="button-delete" onclick="addOrderGoBackHandler()">
          <i class="fas fa-trash"></i>
          Delete
        </button>
        <button id="button-accept" onclick="addOrderHandler()">
          <i class="fas fa-check"></i>
          Accept
        </button>
      </div>
    </div>
</template>

<template id="form-div">
  <div class="choose"> 
    <select name="dish" id="type">
    </select>
    <input name="options" type="text" placeholder="uwagi" id="uwagi">
  </div>
</template>

<template id="options-for-make-order-container">
  <div class="choose"> 
    <select name="dish" id="type">
      <!-- multiple options ( options form DB) -->
    </select>
    <input name="options" type="text" placeholder="uwagi" id="uwagi">
  </div>
</template>

<template id="option-for-make-order-container">
  <option value=""><!-- name --></option>
</template>
<!-- templates for making order -->

