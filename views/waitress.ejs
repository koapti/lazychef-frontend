<!-- templates for summary by table -->
<template id="summary-orders-container">
  <div class="summary-orders">
    <form>
      <input name="table-number" type="number" placeholder="nr" id="tab-num">
    </form>
  
    <div class="table-orders">
      <!-- multiple orders divs -->
    </div>
  
    <div class="summary">
      <div>
        <i class="fas fa-coins"></i>
        <h1>
          <!-- costSummary -->
        </h1>
      </div>
      <button id="button-delete">
        <i class="fas fa-trash"></i>
        Back
      </button>
      <button id="button-accept">
        <i class="fas fa-check"></i>
        Accept
      </button>
    </div>
  </div>
</template>

<template id="one-order-container">
  <div class="order">
    <div class="order-details-sum">
      <h3><!--nr zam--></h3>
      <h3><!--opis--></h3>
    </div>
    <div class="order-cost">
      <i class="fas fa-coins"></i>
